{{#if findedUser}}
  {{#link-to 'create' query_ID class="btn btn-success"}}View my task list{{/link-to}}
  <button {{action "logout"}} class="btn big btn-add">Logout</button>
{{else}}
  <div class="form-block">
    {{#if user_error_login.status}}
    <div class="alert alert-danger" role="alert">
      <strong>{{user_error_login.message}}</strong>
    </div>
    {{/if}}
    <div class="input-wrap">
      {{input type="text" class="form-control" name="user_name" value=user.name placeholder="Enter your name"}}
    </div>
    <div class="input-wrap">
      {{input type="password" class="form-control" name="user_password" value=user.password placeholder="Enter your password"}}
    </div>
    <button {{action "login"}} class="btn big btn-add">Login</button>
    <button {{action "cancel"}} class="btn big btn-add">Cancel</button>
  </div>
{{/if}}
